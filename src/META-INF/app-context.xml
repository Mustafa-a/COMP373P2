<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<description>Wiring the dependencies for the Application.</description>

	<!-- <context:component-scan base-package="com.comp373" /> -->

	<bean id="bankAccount" class="com.comp373.model.bankaccount.BankAccountImpl"
		scope="prototype" />
	<bean id="human" class="com.comp373.model.human.Human" scope="prototype">
		<property name="account" ref="bankAccount" />
	</bean>

	<bean id= "manager" class="com.comp373.model.human.Manager" parent="human" scope="prototype">
		<property name= "battleDome" ref="battledome"> </property>
	</bean>
	
	
	<bean id="battledome" class="com.comp373.model.building.Battledome" scope="prototype">
	<property name="facilities" >
			<list/>
        	<!-- 
         	<list>
             	<ref bean="Facility" />
            </list>
            -->
         </property>

	</bean>
	
	<bean id="trainer" class="com.comp373.model.human.Trainer" parent="human" scope="prototype">
		<property name="pokemon">
		<list/>
        	<!-- 
         	<list>
             	<ref bean="Pokemon" />
            </list>
            -->
		</property>
	</bean>
	
	<bean id="pokemon" class="com.comp373.models.pokemon.Pokemon" scope="prototype"/>
	
	

</beans>
